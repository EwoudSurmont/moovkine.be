---
import type { SEOProps } from "../types/seo";
import { SITE_CONFIG, getSEODefaults } from "../utils/seo";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import LocalBusinessSchema from "../components/LocalBusinessSchema.astro";

export interface Props extends SEOProps {}

const seoProps = getSEODefaults(Astro.props);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(seoProps.ogImage, Astro.site);
---

<!DOCTYPE html>
<html lang="nl" dir="ltr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Primary Meta Tags -->
		<title>{seoProps.title}</title>
		<meta name="title" content={seoProps.title} />
		<meta name="description" content={seoProps.description} />
		{seoProps.keywords.length > 0 && (
			<meta name="keywords" content={seoProps.keywords.join(", ")} />
		)}
		{seoProps.noindex && <meta name="robots" content="noindex" />}
		{seoProps.nofollow && <meta name="robots" content="nofollow" />}

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={seoProps.title} />
		<meta property="og:description" content={seoProps.description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content={SITE_CONFIG.locale} />
		<meta property="og:site_name" content={SITE_CONFIG.name} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={seoProps.title} />
		<meta name="twitter:description" content={seoProps.description} />
		<meta name="twitter:image" content={ogImageURL} />

		<!-- Theme & Icons -->
		<meta name="theme-color" content={SITE_CONFIG.themeColor} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Structured Data -->
		<LocalBusinessSchema />

		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<Navbar></Navbar>
		<slot />
		<Footer></Footer>
		<script data-goatcounter="https://moovkine.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	</body>
</html>

<style is:global>
/* Global styles */

*, *::before, *::after {
box-sizing: border-box;
}

* {
margin: 0;
}

html, body {
height: 100%;
}

body {
line-height: 1.5;
-webkit-font-smoothing: antialiased;
}

img, picture, video, canvas, svg {
display: block;
max-width: 100%;
}

input, button, textarea, select {
font: inherit;
}

p, h1, h2, h3, h4, h5, h6 {
overflow-wrap: break-word;
}

#root, #__next {
isolation: isolate;
}
</style>
